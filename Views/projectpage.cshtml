@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Projectpage>
@{
    Layout = null;
    var title = Model.Title;

    var imageUrl = Umbraco.Media(Model.Image.Id).MediaUrl();
    var text = Model.Text;
}

<div class="page-wrapper">
    <div class="content">
        <div class="">
            <img class="project-image" src="@imageUrl" />
        </div>
        <div>
            <h1>
                @title
            </h1>
            <p>
                @text
            </p>
        </div>
    </div>
</div>

<style>
    h1{
        font: 2rem;
    }
    .page-wrapper {
        display: grid;
        place-items: center;
    }

    .content {
        max-width: 1200px;
    }
    .project-image{
        width: 100%;
        height: 100%;
    }

</style>